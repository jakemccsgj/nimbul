<% semantic_form_for @os_type do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :api_name, :hint => 'API name of the OS Type, for example, linux' %>
    <%= f.input :name, :hint => 'Name the Profile, for example, Linux OS' %>
    <%= f.input :desc, :label => 'Description',
      :input_html => { :class => 'autogrow', :warp => 'soft', :size => '40x2' },
      :hint => 'For example, Open-Source Operating System',
      :required => false %>
  <% end %>
  <% f.buttons do %>
    <%= f.submit %>
    <%= submit_tag 'Cancel', :name => 'cancel_button' %>
  <% end %>
<% end %>
