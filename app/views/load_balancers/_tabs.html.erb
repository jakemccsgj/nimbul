[ <%= close_redbox_link 'Cancel', 'xxlarge_redbox' %> ]
<br/>

<% semantic_remote_form_for [@parent, @load_balancer], :remote => true do |f| %>
  <%= hidden_field_tag :anchor, 'load_balancers' %>
  <%= hidden_field_tag :update, 'provider_account_load_balancers' %>
  <%= f.error_messages %>

  <h1>General Information</h1>
  <hr/>
  <table>
    <tr>
      <th>Name</th>
      <td><%= f.text_field :name, { :class => 'long' } %></td>
    </tr>
  </table>

  <h1>Listeners</h1><br/>
  <span id="load_balancer_<%= @load_balancer.id %>_load_balancer_listeners_index" class="smaller"></span>

  <h1>Health Checks</h1><br/>
  Your load balancer will automatically perform health checks on your EC2 instances and only route traffic to instances that pass the health check. If an instance fails the health check, it is automatically removed from the load balancer.
  <br/><br/>
  <span id="load_balancer_<%= @load_balancer.id %>_health_checks_index" class="smaller"></span>

  <br/>
  <h1>Instances</h1>
  <span id="load_balancer_<%= @load_balancer.id %>_instances_index" class="smaller"></span>

<% end %>

<%= javascript_tag(remote_function(:url => load_balancer_load_balancer_listeners_url(@load_balancer), :method => :get) ) %>
<%= javascript_tag(remote_function(:url => load_balancer_health_checks_url(@load_balancer), :method => :get) ) %>
<%= javascript_tag(remote_function(:url => load_balancer_instances_url(@load_balancer), :method => :get) ) %>

[ <%= close_redbox_link 'Cancel', 'xxlarge_redbox' %> ]
