<td>
<%= attach_instance_resource_link 'attach', @instance, row -%>
<%= detach_instance_resource_link 'detach', @instance, row -%>
<%= remove_instance_resource_link 'remove', @instance, row -%>
</td>
<td>
    <%= edit_in_place(row.cloud_resource, :name, :class => "editable instance-resource-#{row.id}-editable") %>
</td>
<td>
    <%= h(row.cloud_resource.cloud_id_zone_state) %>
</td>
<td class="<%= h(row.state) %>">
    <%= h(row.state) %>
</td>
<td>
    <%= h(row.state_description) %>
</td>
<td>
    <% if row.state == 'pending' %>
        <%= edit_in_place([@instance, row], :mount_point, :url => instance_instance_resource_url(@instance, row), :class => "editable instance-resource-#{row.id}-editable") %>
    <% else %>
        <%= h(row.mount_point) %>
    <% end %>
</td>
<td>
    <%= instance_resource_force_allocation_check_box @instance, row %>
</td>
