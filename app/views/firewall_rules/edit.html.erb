<% remote_form_for :firewall_rule,
    :url => provider_account_firewall_rules(@provider_account),
    :html => { :method => :put } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :ip_range %><br />
    <%= f.text_field :ip_range %>
  </p>
  <p>
    <%= f.label :protocol %><br />
    <%= protocol_select f,  :protocol, PROTOCOLS %>
  </p>
  <p>
    <%= f.label :from_port %><br />
    <%= f.text_field :from_port %>
  </p>
  <p>
    <%= f.label :to_port %><br />
    <%= f.text_field :to_port %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>
