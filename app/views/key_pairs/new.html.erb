<h1>New key_pair</h1>

<% form_for [ @provider_account, KeyPair.new ] do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :private_key %><br />
    <%= f.text_area :private_key %>
  </p>
  <p>
    <%= f.label :public_key %><br />
    <%= f.text_area :public_key %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', provider_account_key_pairs_path %>
