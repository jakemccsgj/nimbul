<h1>Sign Up using LDAP</h1>

<br />

<%= error_messages_for :user %>

<% form_for :user, :url => user_ldap_accounts_path do |f| %>
<%= f.hidden_field :invitation_token %>
<table>
	<tr>
		<th><%= f.label :login, 'LDAP User Name' %></th>
		<td><%= f.text_field :login %></td>
	</tr>
	<tr>
		<th><%= f.label :password, 'LDAP Password' %></th>
		<td><%= f.password_field :password %></td>
	</tr>
	<tr>
		<th><%= f.label :time_zone, 'Time Zone' %></th>
		<td><%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %></td>
	</tr>
	<tr>
		<th>&nbsp;</th>
		<td><%= f.submit 'Sign Up', :disable_with => "Signing up&hellip;" %></td>
	</tr>
</table>
<% end %>

