<h1>Fake an Outgoing Message</h1>

<% form_for(@out_message) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :provider_account_id %><br />
    <%= f.collection_select :provider_account_id, ProviderAccount.find(:all, :order => :name), :id, :name, { :prompt => 'Select an Account' } %>
  </p>
  <p>
    <%= f.label :message_id, 'Message ID' %><br />
    <%= f.text_field :message_id %>
  </p>
  <p>
    <%= f.label :message %><br />
    <%= f.text_field :message %>
  </p>
  <p>
    <%= f.label :recipient %><br />
    <%= f.text_field :recipient %>
  </p>
  <p>
    <%= f.label :sender %><br />
    <%= f.text_field :sender %>
  </p>
  <p>
    <%= f.label :handler %><br />
    <%= f.text_field :handler %>
  </p>
  <p>
    <%= f.label :data %><br />
    <%= f.text_area :data %>
  </p>
  <p>
    <%= f.label :state %><br />
    <%= f.select :state, OUT_MESSAGE_STATES %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', out_messages_path %>
