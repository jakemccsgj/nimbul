<% subtitle h(@server_task.server.name)+': '+h(@server_task.operation) %>

<h1><%= pagetitle h(@server_task.server.name)+': '+h(@server_task.operation)  %></h1>

<br />

<% form_for :server_task,
    :url => server_server_task_path(@server, @server_task),
    :html => { :method => 'put' } do |f| %>
    <%= render :partial => 'server_tasks/fields', :locals => { :f => f } %>
    <%= submit_tag "Update", :disable_with => "Updating&hellip;"  %>
    <%= submit_tag 'Cancel', :name => 'cancel_button' %>
<% end %>

