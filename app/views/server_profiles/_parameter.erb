<% fields_for "server_profile_revision[server_profile_revision_parameter_attributes][]", server_profile_revision_parameter do |f| %>
<% content_tag_for :tr, server_profile_revision_parameter do %>
    <% if server_profile_revision_parameter.new_record? %>
    	<td>&nbsp;</td>
    <% else %>
    	<td class="handle">[drag]</td>
    <% end %>
	<td>
		<%= check_box_tag nil, '', server_profile_revision_parameter.is_protected?, :onclick => "$(this).next('.is_protected').value = ($(this).checked ? '1' : '0');" %>
        <%= f.hidden_field :is_protected, :index => nil, :class => 'is_protected' %>
	</td>
    <td><%= f.text_field :name, :index => nil %></td>
	<td><%= f.text_field :value, :index => nil %></td>
    <td>
    <% if server_profile_revision_parameter.new_record? %>
        <%= link_to_function 'remove', "$(this).up('.server_profile_revision_parameter').remove()"%>
    <% else %>
        <%= f.hidden_field :id, :index => nil %>
        <%= link_to_function 'remove', "mark_for_destroy(this, $(this).up('.server_profile_revision_parameter'))"%>
        <%= f.hidden_field :should_destroy, :index => nil, :class => 'should_destroy' %>
    <% end %>
	<%= error_messages_for :server_profile_revision_parameter %>
    </td>
<% end %>
<% end %>
